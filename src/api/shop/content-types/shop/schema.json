{
  "kind": "collectionType",
  "collectionName": "shops",
  "info": {
    "singularName": "shop",
    "pluralName": "shops",
    "displayName": "shop",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 3
    },
    "address": {
      "type": "string",
      "required": true,
      "minLength": 4
    },
    "phone_number": {
      "type": "string",
      "required": true
    },
    "website": {
      "type": "string"
    },
    "opening_hours": {
      "type": "string",
      "regex": "^([01]?[0-9]|2[0-3]):([0-5][0-9]) - ([01]?[0-9]|2[0-3]):([0-5][0-9])$"
    },
    "contact_email": {
      "type": "email",
      "required": true
    }
  }
}
